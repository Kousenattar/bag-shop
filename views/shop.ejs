<%- include('./partials/header') %>

<% if (success && success.length > 0) { %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<nav class="w-full fixed top-0 left-0 px-5 py-3 flex justify-between bg-[#ffffff] shadow-md">
    <h3 class="text-xl text-gray-700">Scatch</h3>
</nav>

<div class="w-full h-screen flex flex-col sm:flex-row sm:items-start px-4 sm:px-20 py-4 sm:py-20 bg-[#f7f7f7]">
    <!-- Sidebar -->
    <div class="w-[25%] flex h-screen flex-col items-start bg-[#ffffff] shadow-md p-5 rounded-lg">
        <div class="flex items-center gap-2">
            <h3>Sort by</h3>
            <form action="/shop">
                <select class="border-[1px] px-2 py-1" name="sortby" id="">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>
        
        <div class="flex flex-col mt-20">
            <a class="block w-fit mb-2 hover:text-blue-500" href="">New Collection</a>
            <a class="block w-fit mb-2 hover:text-blue-500" href="">All Products</a>
            <a class="block w-fit mb-2 hover:text-blue-500" href="">Discounted Products</a>
        </div>
        
        <div class="mt-32">
            <a class="block w-fit mb-2 hover:text-blue-500" href="">Filter by :</a>
            <a class="block w-fit mb-2 hover:text-blue-500" href="">Availability</a>
            <a class="block w-fit mb-2 hover:text-blue-500" href="">Discount</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="w-[75%] flex flex-col gap-5 h-screen">
        <div class="flex flex-wrap gap-5">
            <% products.forEach(function(product) { %>
                <div class="w-[calc(25%-1rem)] bg-[#ffffff] shadow-md rounded-lg p-4"> <!-- White background with shadow for each product -->
                    <!-- Product Image -->
                    <div class="w-full h-52 flex items-center justify-center bg-[#f0f0f0]">
                        <img class="h-[12rem] border-red-500" src="data:image/jpeg;base64,<%= product.imageBase64 %>" alt="">
                    </div>
                    
                    <!-- Product Details -->
                    <div class="flex justify-between bg-[#ffffff] items-center px-4 py-4 text-gray-800">
                        <div>
                            <h3><%= product.name %></h3>
                            <h4>â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-7 h-7 flex items-center justify-center rounded-full bg-blue-500 text-white" href="/addCart/<%= product._id %>">
                            <i class="ri-add-line"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
