<%- include('./partials/header') %>

<% user.cart.forEach(function(cart) { %>
    <div class="w-full h-screen flex items-start px-10 py-20 gap-10 bg-[#f9f9f9]">
        <!-- Product Section -->
        <div class="w-[30%] rounded-lg overflow-hidden bg-white shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="w-full flex justify-center items-center h-80 bg-[<%= cart.bgcolor %>]">
                <img class="h-[20rem] border-2 border-gray-300" src="data:image/jpeg;base64,<%= cart.image.toString('base64') %>" alt="">
            </div>

            <!-- Product Details -->
            <div class="w-full flex justify-between px-5 py-4 bg-[<%= cart.panelcolor %>]">
                <h3 class="text-2xl font-semibold text-gray-800"><%= cart.name %></h3>
                <div class="flex items-center gap-2">
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center text-gray-700 ri-add-line hover:text-blue-500 cursor-pointer transition-colors duration-300"></i>
                    <div class="px-2 py-1 rounded-md bg-white text-[<%= cart.textcolor %>]">01</div>
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center text-gray-700 ri-subtract-line hover:text-blue-500 cursor-pointer transition-colors duration-300"></i>
                </div>
            </div>

            <!-- Pricing Section -->
            <div class="flex items-center justify-between px-5 py-3 bg-[#f3f3f3] rounded-b-lg">
                <h4 class="text-lg text-gray-600">Net Total</h4>
                <h2 class="text-lg font-semibold text-green-600">₹  <%= total %></h2> <!-- Show individual product price -->
                <!-- Delete button -->
                <a href="/delete/<%= cart._id %>" class="text-red-500 hover:text-red-700 transition-colors duration-300">Delete</a>
            </div>
        </div>

        <!-- Price Breakdown Section -->
        <div class="w-[70%] bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
            <h3 class="text-xl font-semibold text-gray-700">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/2 text-gray-600">Total MRP</h4>
                    <h4 class="text-gray-800">₹ <%= cart.price %></h4> <!-- Show product price -->
                </div>
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/2 text-gray-600">Discount on MRP</h4>
                    <h4 class="text-gray-800">₹ <%= cart.discount %></h4> <!-- Show discount -->
                </div>
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/2 text-gray-600">Platform Fee</h4>
                    <h4 class="text-gray-800">₹ 20</h4> <!-- Fixed platform fee -->
                </div>
                <div class="flex justify-between mt-2">
                    <h4 class="w-1/2 text-gray-600">Shipping Fee</h4>
                    <h4 class="text-gray-800">FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-gray-300 mt-10"></div>

            <!-- Total Amount Section -->
            <div class="flex justify-between mt-5">
                
                <h3 class="w-1/2 text-xl font-semibold text-gray-700">Total Amount</h3>
                <a href="/buy/<%= cart._id %>" class="text-white bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded">
                    Buy Now
                  </a>
                  
                <h3 class="font-semibold text-xl text-green-600">₹ <%= total %></h3> <!-- Total of all products -->
            </div>
        </div>
    </div>
<% }) %>

<%- include('./partials/footer') %>
